{
  "version": 2,
  "builds": [
    {
      "src": "frontend/app.py",
      "use": "@vercel/python",
      "config": {
        "pythonVersion": "3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/app.py"
    }
  ],
  "env": {
    "PYTHONPATH": "${{secrets.PYTHONPATH}}",
    "STREAMLIT_SERVER_PORT": "${{secrets.STREAMLIT_SERVER_PORT}}",
    "PYTHONUNBUFFERED": "1"
  },
  "installCommand": "pip install --upgrade pip && pip install -r requirements.txt",
  "startCommand": "streamlit run frontend/app.py --server.port $PORT --server.address 0.0.0.0"
}
