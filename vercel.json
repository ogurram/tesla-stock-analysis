{
  "version": 2,
  "builds": [
    {
      "src": "frontend/app.py",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "PORT": "${{secrets.PORT}}",
    "PYTHONUNBUFFERED": "1"
  },
  "installCommand": "pip install --upgrade pip && pip install -r requirements.txt",
  "startCommand": "streamlit run frontend/app.py --server.port $PORT --server.address 0.0.0.0"
}
